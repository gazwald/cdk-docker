{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:all"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "python": {
    "enabled": false
  },
  "pip-compile": {
    "fileMatch": ["(^|/)requirements\\.in$"]
  }
}
